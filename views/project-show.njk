{% extends "layout.njk" %}

{% block content %}
<div class="container py-4 px-3 mx-auto">
    <section class="page-shell">
        <h1 class="page-title mb-3">{{ project.name }}</h1>
        <p class="mb-3">Status: {{ project.statusCode }}</p>
        <div class="d-flex gap-2">
            <a href="/projects/{{ project.id }}/edit" class="btn btn-outline-primary">Edit</a>
            <a href="/todos?projectId={{ project.id }}" class="btn btn-outline-secondary">View Todos</a>
        </div>
    </section>
</div>
{% endblock content %}
