{% extends "layout.njk" %}

{% block content %}
<div class="container py-4 px-3 mx-auto">
    <section class="page-shell">
        <h1 class="page-title mb-3">{{ pageTitle }}</h1>

        <form action="{{ action }}" method="POST">
            <input type="hidden" name="version" value="{{ fields.version }}">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" class="form-control {% if errors.title %} is-invalid {% endif %}" id="title" value="{{ fields.title }}" aria-describedby="title">
                {% if errors.title %}
                    <div class="invalid-feedback">{{ errors.title }}</div>
                {% endif %}
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3">{{ fields.description }}</textarea>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label for="priority" class="form-label">Priority</label>
                    <select id="priority" name="priority" class="form-select">
                        <option value="low" {% if fields.priority == "low" %}selected{% endif %}>Low</option>
                        <option value="medium" {% if fields.priority == "medium" %}selected{% endif %}>Medium</option>
                        <option value="high" {% if fields.priority == "high" %}selected{% endif %}>High</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="statusCode" class="form-label">Status</label>
                    <select id="statusCode" name="statusCode" class="form-select">
                        <option value="open" {% if fields.statusCode == "open" %}selected{% endif %}>Open</option>
                        <option value="completed" {% if fields.statusCode == "completed" %}selected{% endif %}>Completed</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="dueAt" class="form-label">Due Date</label>
                    <input type="date" id="dueAt" name="dueAt" class="form-control {% if errors.dueAt %} is-invalid {% endif %}" value="{{ fields.dueAt }}">
                    {% if errors.dueAt %}
                    <div class="invalid-feedback">{{ errors.dueAt }}</div>
                    {% endif %}
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap mt-3">
                <button type="submit" class="btn btn-primary">{{ submitLabel }}</button>
                <a href="/todos/{{ todoId }}" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>

        <div class="d-flex gap-2 flex-wrap mt-3">
            <form action="/todos/{{ todoId }}/toggle" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary">Toggle Status</button>
            </form>
            <form action="/todos/{{ todoId }}/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </section>
</div>

{% endblock content %}
