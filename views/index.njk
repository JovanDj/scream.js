{% extends "layout.njk" %}

{% block content %}
    <div class="container py-4 px-3 mx-auto">
        <h1>Todos</h1>
        <p>
            <a href="/todos/create">Create todo</a>
        </p>

        {% if todos.length %}
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>

                    </tr>
                </thead>
                <tbody>
                    {% for todo in todos %}
                        <tr data-testid="todo-row">
                            <td>
                                <a data-testid="todo-title" href="/todos/{{ todo.id }}">{{todo.title}}</a>
                                {% if todo.completed %}
                                    <span class="badge text-bg-success ms-2" data-testid="todo-status">Completed</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock content %}
