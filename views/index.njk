{% extends "layout.njk" %}

{% block content %}
    <div class="container py-4 px-3 mx-auto">
        <h1>Todos</h1>
        <p>
            <a  up-preload up-layer="new modal" up-accept-location="/todos/$" href="/todos/create">Create todo</a>
        </p>

        {% if todos.length %}
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Due Date</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                    </tr>
                </thead>
                <tbody>
                    {% for todo in todos %}
                        <tr>
                            <td>
                                <a up-follow up-preload up-layer="new popup" up-size="full" href="/todos/{{ todo.id }}">{{todo.title}}</a>
                            </td>
                            <td>{{todo.dueDate.toLocaleString('sr-Latn-rs')}}</td>
                            <td>{{todo.createdAt.toLocaleString('sr-Latn-rs')}}</td>
                            <td>{{todo.updatedAt.toLocaleString('sr-Latn-rs')}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock content %}