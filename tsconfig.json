{
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],

  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@scream.js/*": ["./lib/*"]
    }
  },

  "include": [
    "server.ts",
    "lib/",
    "src/",
    "main.ts",
    "vite.config.ts",
    "migrations.ts",
    "migrations/",
    "config/",
    "public/js",
    "knex.schema.ts",
    "routes.ts",
    "*.test.ts"
  ],
  "exclude": ["lib/http/koa", "lib/http/scream"]
}
