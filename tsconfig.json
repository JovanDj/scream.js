{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
