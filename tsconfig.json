{
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/node22/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],

	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@scream.js/*": ["./lib/*"]
		},
		"verbatimModuleSyntax": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"erasableSyntaxOnly": true
	},
	"include": ["**/*.ts", "e2e"]
}
