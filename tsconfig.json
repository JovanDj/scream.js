{
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/node18/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],

  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@scream.js/*": ["./lib/*"]
    }
  },

  "include": [
    "server.ts",
    "@scream.js/**/*.ts",
    "./src/**/*.ts",
    "main.ts",
    "vite.config.ts",
    "./*.ts",
    "./migrations/**/*.ts",
    "config"
  ]
}
