{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true,
    "pretty": true
  },
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "lib": ["es6", "ESNext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"]
}
