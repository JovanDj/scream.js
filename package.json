{
	"name": "scream.js",
	"version": "0.1.0",
	"description": "",
	"scripts": {
		"start": "node --import tsx --watch server.ts",
		"vite": "vite",
		"dev": "run-p start vite",
		"test:integration": "node --import tsx --test",
		"test:e2e": "playwright test",
		"build": "tsc && tsc-alias",
		"prepare": "husky",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"db:migrate": "knex migrate:latest",
		"db:seed": "knex seed:run",
		"typecheck": "tsc --noEmit",
		"test": "cross-env NODE_ENV=test run-s test:integration test:e2e",
		"check": "run-p typecheck lint:fix test"
	},
	"keywords": [],
	"author": "",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["/dist"],
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@babel/register": "^7.27.1",
		"@biomejs/biome": "^1.9.4",
		"@faker-js/faker": "^9.9.0",
		"@playwright/test": "^1.54.2",
		"@stryker-mutator/core": "^9.0.1",
		"@swc/core": "^1.13.3",
		"@swc/register": "^0.1.10",
		"@tsconfig/node-ts": "^23.6.1",
		"@tsconfig/recommended": "^1.0.10",
		"@tsconfig/strictest": "^2.0.5",
		"@types/cheerio": "^0.22.35",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.19",
		"@types/csurf": "^1.11.5",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/koa": "^2.15.0",
		"@types/koa__router": "^12.0.4",
		"@types/node": "^22.17.1",
		"@types/nunjucks": "^3.2.6",
		"@types/sqlite3": "^3.1.11",
		"commitizen": "^4.3.1",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.0.1",
		"esbuild-register": "^3.6.0",
		"husky": "^9.1.7",
		"knex": "^3.1.0",
		"lint-staged": "^15.5.2",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.44.1",
		"sass": "^1.90.0",
		"sucrase": "^3.35.0",
		"ts-mockito": "^2.6.1",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": "^22"
	},
	"lint-staged": {
		".ts": [
			"tsc --noEmit",
			"biome check --write --no-errors-on-unmatched",
			"npm test"
		],
		"*": "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
	},
	"dependencies": {
		"@koa/router": "^13.1.1",
		"@ladjs/consolidate": "^1.0.4",
		"@ladjs/koa-views": "^9.0.0",
		"@popperjs/core": "^2.11.8",
		"@tsconfig/node22": "^22.0.2",
		"@types/pg": "^8.15.5",
		"better-sqlite3": "^11.10.0",
		"bootstrap": "^5.3.7",
		"cheerio": "^1.1.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-session": "^1.18.2",
		"helmet": "^7.2.0",
		"http-proxy-middleware": "^3.0.5",
		"koa": "^2.16.2",
		"koa-body": "^6.0.1",
		"nunjucks": "^3.2.4",
		"pg": "^8.16.3",
		"query-string": "^9.2.2",
		"raw-body": "^3.0.0",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"superagent": "^10.2.3",
		"superagent-cheerio": "^1.0.1",
		"tslib": "^2.8.1",
		"zod": "^3.25.76"
	},
	"volta": {
		"node": "22.18.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
		}
	}
}
